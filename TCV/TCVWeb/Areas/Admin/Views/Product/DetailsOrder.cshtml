@model ShopOrder
@{
    ViewBag.Icon = "fa-shopping-cart";
    ViewBag.Title = "Đơn hàng";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2><i class="fa @ViewBag.Icon"></i> @ViewBag.Title</h2>
        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a asp-action="Index" asp-controller="HomeAdmin">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li>
                    <a asp-action="Index">
                        <i class="fa fas fa-product-hunt"></i> Sản phẩm
                    </a>
                </li>
                <li>
                    <span>Đơn hàng</span>
                </li>
            </ol>
            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>
    <div class="row">
        <div class="col-sm-4">
            <a class="btn btn-primary" href="@Url.Action("Index")"><i class="fa fa-undo"></i> Quay lại</a>
            @*<a class="btn btn-warning" href="@Url.Action("Update", new { @id = Model.Id })" data-modal=""><i class="fa fa-pencil"></i> Cập nhật</a>*@
        </div>
        <div class="col-sm-8 text-right">
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 text-center">
            <h3>Mã đơn hàng: @Html.DisplayFor(m => m.Id)</h3>
            <hr />
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-sm-6">
                    <dl class="dl-horizontal">
                        <dt>@Html.DisplayNameFor(m => m.GrandTotalPrice)</dt>
                        <dd>@Html.DisplayFor(m => m.GrandTotalPrice)</dd>
                        <dt>@Html.DisplayNameFor(m => m.PaymentInfo)</dt>
                        <dd>@Html.DisplayFor(m => m.PaymentInfo)</dd>
                        <dt>@Html.DisplayNameFor(m => m.Note)</dt>
                        <dd>@Html.DisplayFor(m => m.Note)</dd>
                        <dt>@Html.DisplayNameFor(m => m.ShippingAddress)</dt>
                        <dd>@Html.DisplayFor(m => m.ShippingAddress)</dd>
                        <dt>@Html.DisplayNameFor(m => m.CreateTime)</dt>
                        <dd>@Html.DisplayFor(m => m.CreateTime)</dd>
                        <dt>@Html.DisplayNameFor(m => m.OrderStatus)</dt>
                        <dd>@Html.DisplayFor(m => m.OrderStatus)</dd>
                        <dt>@Html.DisplayNameFor(m => m.PaymentStatus)</dt>
                        <dd>@Html.DisplayFor(m => m.PaymentStatus)</dd>
                    </dl>
                    <hr />
                </div>
                @*<div class="col-sm-6">
                    <dl class="dl-horizontal">
                        <dt>@Html.DisplayNameFor(m => m.CashCharged)</dt>
