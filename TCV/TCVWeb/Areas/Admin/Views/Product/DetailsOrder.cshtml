                        <dd>@Html.DisplayFor(m => m.CashExchanged)</dd>
                        <dt>@Html.DisplayNameFor(m => m.Status)</dt>
                        <dd>@Html.EnumStatusFor(m => m.Status)</dd>
                    </dl>
                </div>*@
            </div>
        </div>
    </div>



    <div class="m-t">
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#charge" aria-controls="charge" role="tab" data-toggle="tab">Danh sách sản phẩm</a></li>
            <li role="presentation"><a href="#infoUser" aria-controls="infoUser" role="tab" data-toggle="tab">Thông tin khách hàng</a></li>
            <li role="presentation"><a href="#exchange" aria-controls="exchange" role="tab" data-toggle="tab">Thông tin người giao hàng</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="charge">
