@using TCVWeb.Areas.Admin.Models
@model UpdateOrderItemModel
@{
    Layout = null;
}
<form asp-action="UpdateOrderItem" method="post" class="modalForm" autocomplete="off">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title"><i class="fa fa-windows"></i> Cập nhật thông tin</h3>
    </div>
    <div class="modal-body">
        <a class="btn btn-warning" onclick="Search();"><i class="fa fa-search"></i> Tìm sản phẩm</a>
        <div class="col-sm-4">
            <input id="idItem" class="form-control" style="width:240px;" placeholder="Tìm mã sản phẩm" />
        </div>
        <partial name="SearchItem" />
    </div>
    <div class="modal-footer">
        <span id="progress" class="text-center" style="display: none;"><img src="~/img/wait.gif" alt="waiting..." />Saving...</span>
        <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Lưu lại</button>
        <button class="btn btn-warning" data-dismiss="modal"><i class="fa fa-undo"></i> Hủy bỏ</button>
    </div>
</form>

<script>
    function Search() {
        var id = $("#idItem").val();
        $.ajax(
            {
                url: "/Admin/Product/SearchItem/" + id,
                type: 'POST',
                success: function (data) {
                    $("#popupItem").css("display", "block");
                    $("#ItemName").val(data.name);
                    $("#SKU").val(data.sku);
                },
                //error {
                //    console.log("Không tìm thấy sản phẩm!")
                //}
            });
        return false;
    }
</script>
