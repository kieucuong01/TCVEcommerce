@addTagHelper *,TCV.Shared
@model PagedList<ShopItem>
@{
    var categories = ViewData["categories"] as String[];
}
<div role="main" class="main">
    <section class="page-header">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li><a href="#">Fashion</a></li>
                <li class="active">Dresses</li>
            </ul>
        </div>
    </section>
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-md-push-3">
                <div class="owl-carousel boxed-banner-carosel owl-theme" data-plugin-options="{'items':1}">
                    <div class="boxed-banner">
                        <img src="~/img/demos/shop/banners/category/banner1.png" alt="Banner">
                        <div class="banner-content">
                            <h2>CATEGORY <strong>BANNER</strong></h2>
                            <p>Set banners and description for any category of your website.</p>
                        </div>
                    </div>
                    <div class="boxed-banner">
                        <img src="~/img/demos/shop/banners/category/banner2.png" alt="Banner">
                        <div class="banner-content">
                            <img src="~/img/demos/shop/banners/category/logos.png" alt="Logos">
                            <a href="#" class="shop-now">Shop Now</a>
                        </div>
                    </div>
                </div>
                <div class="toolbar mb-none">
                    <div class="sorter">
                        <div class="sort-by">
                            <label>Sort by:</label>
                            <select>
                                <option value="Position">Position</option>
                                <option value="Name">Name</option>
                                <option value="Price">Price</option>
                            </select>
                            <a href="#" title="Set Desc Direction">
                                <img src="~/img/demos/shop/i_asc_arrow.gif" alt="Set Desc Direction">
                            </a>
                        </div>
                        <div class="view-mode">
                            <span title="Grid">
                                <i class="fa fa-th"></i>
                            </span>
                            <a href="#" title="List">
                                <i class="fa fa-list-ul"></i>
                            </a>
                        </div>
                        <ul class="pagination">
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#"><i class="fa fa-caret-right"></i></a></li>
                        </ul>
                        <div class="limiter">
                            <label>Show:</label>
                            <select>
                                <option value="12">12</option>
                                <option value="24">24</option>
                                <option value="36">36</option>
                            </select>
                        </div>
                    </div>
                </div>
                <ul class="products-grid columns4">
                    @foreach (var item in Model.Content)
            {
                <li>
                    <div class="product">
                        <figure class="product-image-area">
                            <a href="@Url.Action("Detail","Product",new { id = item.Id })" title="@item.Name" class="product-image">
                                <img src="@item.Image" alt="Product Name" style="width:100%; height:200px">
                                <img src="@item.Preview" alt="Product Name" class="product-hover-image" style="width:100%; height:200px">
                            </a>
                            <a href="#" class="product-quickview">
                                <i class="fa fa-share-square-o"></i>
                                <span>Quick View</span>
                            </a>
                            @if (item.SalePrice != item.RegularPrice)
                    {
                        <div class="product-label"><span class="discount">-10%</span></div>
            }
                            @if (item.NewProduct)
                    {
                        <div class="product-label"><span class="new">New</span></div>
            }
                        </figure>
                        <div class="product-details-area">
                            <h2 class="product-name"><a href="@Url.Action("Detail","Product",new { id = item.Id })" title="@item.Name">@item.Name</a></h2>
                            <div class="product-ratings">
                                <div class="ratings-box">
                                    <div class="rating" style="width:60%"></div>
                                </div>
                            </div>
                            <div class="product-price-box">
                                @if (item.SalePrice != item.RegularPrice)
                        {
                            <span class="old-price">@item.RegularPrice</span>
                }

                                <span class="product-price">@item.CurrentPrice</span>
                            </div>
                            <div class="product-actions">
                                <a href="#" class="addtowishlist" title="Add to Wishlist">
                                    <i class="fa fa-heart"></i>
                                </a>
                                <a href="#" class="addtocart" title="Add to Cart">
                                    <i class="fa fa-shopping-cart"></i>
                                    <span>Add to Cart</span>
                                </a>
                                <a href="#" class="comparelink" title="Add to Compare">
                                    <i class="glyphicon glyphicon-signal"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </li>
    }
                </ul>
                <div class="toolbar-bottom">
                    <div class="toolbar">
                        <div class="sorter">
                            <ul class="pagination">
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#"><i class="fa fa-caret-right"></i></a></li>
                            </ul>
                            <div class="limiter">
                                <label>Show:</label>
                                <select>
                                    <option value="12">12</option>
                                    <option value="24">24</option>
                                    <option value="36">36</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @Html.Partial("_PartialFilterCategory", categories)


        </div>
    </div>
</div>
